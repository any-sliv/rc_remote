{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j8"]
        },
        {
            "label": "CMake",
            "group": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
              "-Bbuild",
              "-DCMAKE_TOOLCHAIN_FILE=gcc-arm-none-eabi.cmake",
              "-DCMAKE_BUILD_TYPE=Debug",
            ]
        },
        {
            "label": "Build clean",
            "group": "build",
            "command": "make",
            "args": ["clean"]
        },
        {
            "label": "Build all",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["CMake", "Build"]
        },
        {
            "label": "Test googletest/CMake",
            "group": "test",
            "command": "cmake",
            "args": ["."],
            "options": {
                "cwd": "${workspaceFolder}/Tests/googletest"
            }
        },
        {
            "label": "Test googletest/make",
            "group": "test",
            "command": "make",
            "args": ["-j7"],
            "options": {
                "cwd": "${workspaceFolder}/Tests/googletest"
            }
        },
        {
            "label": "Test CMake",
            "group": "test",
            "command": "cmake",
            "args": ["."],
            "options": {
                "cwd": "${workspaceFolder}/Tests"
            }
        },
        {
            "label": "Test make",
            "group": "test",
            "command": "make",
            "args": ["-j7"],
            "options": {
                "cwd": "${workspaceFolder}/Tests"
            }
        },
        {
            "label": "Test build and run",
            "group": "test",
            "command": "./utest",
            "dependsOrder": "sequence",
            "dependsOn": ["Test googletest/CMake", "Test googletest/make", "Test CMake", "Test make"],
            "options": {
                "cwd": "${workspaceFolder}/Tests"
            }
        },
        {
            "label": "Upload to device",
            "group": "build",
            "command": "st-flash",
            "args": [
              "--connect-under-reset", 
              "--flash=128k", 
              "--freq=1800k",
              //"--format binary", // todo ?? 
              "--opt", //todo careful here
              "--reset",
              "write", 
              "./build/rc_remote.bin",
              "0x08000000"
            ],
            "dependsOrder": "sequence",
            "dependsOn": ["Build"],
        }
    ]
}